<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddalem"
    tools:context="com.ilyas.belajarmengaji.TebakBacaanTanwinActivity">

    <ImageButton
        android:id="@+id/soal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/tebakkuistanwin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/jawaban1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/soal"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/wan" />
    <ImageButton
        android:id="@+id/jawaban2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/zhin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/soal"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/jawaban1"
        />
    <ImageButton
        android:id="@+id/jawaban3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/khon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/soal"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/jawaban1"
        />

    <TextView
        android:text="SKOR :"
        android:textColor="@color/SKOR"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/textView2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/help"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/help"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/back"/>

</RelativeLayout>